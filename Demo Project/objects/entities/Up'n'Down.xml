<Entities>
	<Entity name="UpDown">
		<Tilesheet pallete="Default">images\enemies\Mega Man 4\Up'n'Down.png</Tilesheet>
		<Sprite width="16" height="16" reversed="true">
			<Hotspot x="8" y="8" />
			<Frame x="0" y="0" duration="2" />
			<Frame x="16" y="0" duration="2" />
			<Frame x="32" y="0" duration="2" />
		</Sprite>
		<Collision>
			<Enabled>True</Enabled>
			<Hitbox name="Body" x="0" y="0" width="10" height="10" damage="1">
				<Hits>Player</Hits><Group>Enemy</Group>
			</Hitbox>
		</Collision>
		<State name="Start">
			<Position>
				<X base="Inherit" />
				<Y base="Inherit" />
			</Position>
			<Movement>
				<FlipSprite>True</FlipSprite>
				<Flying>true</Flying>
				<Y magnitude="3" direction="Up" /><X magnitude="0" />
			</Movement>
			<Trigger>
				<Condition>Math.Floor(Random * 3) == 0</Condition>
				<Effect>
					<Vars name="count" value="42"></Vars>
				</Effect>
			</Trigger>
			<Trigger>
				<Condition>Math.Floor(Random * 3) == 1</Condition>
				<Effect>
					<Vars name="count" value="53"></Vars>
				</Effect>
			</Trigger>
			<Trigger>
				<Condition>Math.Floor(Random * 3) == 2</Condition>
				<Effect>
					<Vars name="count" value="64"></Vars>
				</Effect>
			</Trigger>
			<Trigger>
				<Condition>true</Condition>
				<Effect><State>Up</State></Effect>
			</Trigger>
		</State>
		<State name="Up">
			<Trigger>
				<Condition>StateTime.ToString() == Vars.Get("count")</Condition>
				<Effect>
					<State>DownLeft</State>
					<Movement>
						<Y magnitude="0.6992" direction="Down" /><X magnitude="0.2" direction="Left" />
					</Movement>
				</Effect>
			</Trigger>
		</State>
		<State name="DownLeft">
			<Trigger><Condition>StateTime == 24</Condition>
			<Effect>
				<State>DownRightRight</State>
				<Movement>
					<X magnitude="0.2" direction="Right" />
				</Movement>
			</Effect>
			</Trigger>
		</State>
		<State name="DownRightRight">
			<Trigger><Condition>StateTime == 48</Condition>
			<Effect>
				<State>DownLeftLeft</State>
				<Movement>
					<X magnitude="0.2" direction="Left" />
				</Movement>
			</Effect>
			</Trigger>
		</State>
		<State name="DownLeftLeft">
			<Trigger><Condition>StateTime == 48</Condition>
			<Effect>
				<State>DownRightRight</State>
				<Movement>
					<X magnitude="0.2" direction="Right" />
				</Movement>
			</Effect>
			</Trigger>
		</State>
		<Health><Max>1</Max><Flash>8</Flash></Health>
		<Trigger>
			<Condition>Health.Hit == True</Condition>
			<Effect>
				<Sound name="EnemyHurt" />
			</Effect>
		</Trigger>
		<Death>
			<Call>EnemyDeath</Call>
		</Death>
	</Entity>

	<Entity name="UpDownSpawner">
		<Position />
		<State name="Start">
			<Movement>
				<Flying>true</Flying>
			</Movement>
			<Trigger condition="PlayerDistX &lt; 32">
				<Effect>
					<Spawn name="UpDown" />
					<State>Loop</State>
				</Effect>
			</Trigger>
		</State>
		<State name="Loop">
			<Trigger condition="PlayerDistX &gt; 32">
				<Effect>
					<Timer><Delete>counter</Delete></Timer>
				</Effect>
			</Trigger>
			<Trigger>
				<Condition>PlayerDistX &lt; 32 And Not Timer.Exists("counter")</Condition>
				<Effect>
					<Timer><Start>counter</Start></Timer>
				</Effect>
			</Trigger>
			<Trigger><Condition>Timer.Value("counter") == 240</Condition>
				<Effect>
					<Spawn name="UpDown" />
					<Timer><Reset>counter</Reset></Timer>
				</Effect>
			</Trigger>
		</State>
	</Entity>
</Entities>