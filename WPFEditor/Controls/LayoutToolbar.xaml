<UserControl x:Class="MegaMan.Editor.Controls.LayoutToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="clr-namespace:MegaMan.Editor.Controls.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="500">
    <ToolBarTray Orientation="Horizontal">
        <ToolBar Band="1" BandIndex="1">
            <RadioButton Padding="0" Margin="0" Width="28" Height="24" Command="{Binding ChangeToolCommand}" CommandParameter="Hand">
                <Image Source="/Resources/hand.png" SnapsToDevicePixels="True" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </RadioButton>
            <RadioButton>
                Cleave H
            </RadioButton>
            <RadioButton Padding="0" Margin="0" Width="28" Height="24" Command="{Binding ChangeToolCommand}" CommandParameter="VSplit">
                <Image Source="/Resources/vsplit.png" SnapsToDevicePixels="True" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </RadioButton>
        </ToolBar>
        <ToolBar Band="1" BandIndex="2">
            <Button Command="{Binding AddScreenCommand}">
                AddScreen
            </Button>
        </ToolBar>
    </ToolBarTray>
</UserControl>
