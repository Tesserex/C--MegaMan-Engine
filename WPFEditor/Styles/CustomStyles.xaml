<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:my="clr-namespace:MegaMan.Editor">

    <Style TargetType="{x:Type TextBlock}" x:Key="ControlLabel">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="15,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    
    <Style TargetType="{x:Type Label}" x:Key="Header">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="../Resources/#Mega Man 10" />
    </Style>

    <Style TargetType="{x:Type Label}" x:Key="H1" BasedOn="{StaticResource Header}">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style TargetType="Button" x:Key="ButtonStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border" CornerRadius="{TemplateBinding my:ThemeProperties.ButtonRadius}" BorderBrush="#80a0f0" BorderThickness="{TemplateBinding BorderThickness}" Padding="8,1" Margin="{TemplateBinding Margin}">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#d0eaff" Offset="0"></GradientStop>
                                <GradientStop Color="#b4d2f0" Offset="1"></GradientStop>
                            </LinearGradientBrush>
                        </Border.Background>
                        <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter TargetName="Border" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#dadada" Offset="0"></GradientStop>
                                        <GradientStop Color="#c4c4c4" Offset="1"></GradientStop>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#a0a0a0"></Setter>
                            <Setter Property="Foreground" Value="#666"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="Margin" Value="2,0"></Setter>
    </Style>

    <ControlTemplate TargetType="Button" x:Key="RecentProjectButton">
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="4" HorizontalAlignment="Left">
            <Border BorderBrush="{StaticResource LightGray}" BorderThickness="1" CornerRadius="3">
                <Border BorderBrush="White" BorderThickness="2" CornerRadius="2">
                    <Border BorderBrush="{StaticResource LightGray}" BorderThickness="1" CornerRadius="1">
                        <Border BorderBrush="Black" BorderThickness="1">
                            <DockPanel Grid.Row="1" Grid.Column="1" x:Name="dockPanel" HorizontalAlignment="Left" MinWidth="400" Background="Transparent">
                                <Image x:Name="pointerImage" DockPanel.Dock="Left" Source="/Resources/project.png" Stretch="None" Margin="10,0,15,0" />
                                <TextBlock DockPanel.Dock="Top" Text="{Binding Name}" FontSize="16" />
                                <TextBlock DockPanel.Dock="Bottom" Text="{Binding AbsolutePath}" FontSize="12" Margin="0,0,0,5" />
                            </DockPanel>
                        </Border>
                    </Border>
                </Border>
            </Border>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="dockPanel" Property="Background" Value="{StaticResource LightBlue}" />
                <Setter TargetName="pointerImage" Property="Visibility" Value="Visible" />
            </Trigger>
            <Trigger Property="IsMouseOver" Value="false">
                <Setter TargetName="pointerImage" Property="Visibility" Value="Hidden" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonStyle}"></Style>

    <Style x:Key="LeftButton" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Margin" Value="2,0,0,0"></Setter>
        <Setter Property="my:ThemeProperties.ButtonRadius" Value="4,0,0,4"></Setter>
    </Style>

    <Style x:Key="RightButton" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Margin" Value="0,0,2,0"></Setter>
        <Setter Property="my:ThemeProperties.ButtonRadius" Value="0,4,4,0"></Setter>
    </Style>

    <Style x:Key="InputForm" TargetType="{x:Type Grid}">
        <Style.Resources>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="Margin" Value="8,6" />
                <Setter Property="FontSize" Value="14" />
            </Style>
            <Style TargetType="{x:Type Label}">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="8,0,0,0" />
                <Setter Property="FontSize" Value="14" />
            </Style>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonStyle}">
                <Setter Property="FontSize" Value="14" />
            </Style>
            <Style TargetType="{x:Type CheckBox}">
                <Setter Property="Margin" Value="8,6" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style TargetType="{x:Type RadioButton}">
                <Setter Property="Margin" Value="10,2" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
        </Style.Resources>
    </Style>

</ResourceDictionary>